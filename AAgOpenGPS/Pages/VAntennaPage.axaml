<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AAgOpenGPS.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AAgOpenGPS.Pages.VAntennaPage"
             x:DataType="vm:MainViewModel">
  <ScrollViewer>
    <StackPanel x:Name="cantabVAntenna">
      <NumericUpDown Value="{Binding AntennaHeight}" Increment="1" x:Name="nudAntennaHeight" Height="25" Width="144" HorizontalAlignment="Left" Margin="100 0"/>
      <WrapPanel><!--10-->
          <Image Source="avares://AAgOpenGPS/Assets/AntennaTractor.png" Height="446" Width="514"/>
          <StackPanel>
            <NumericUpDown Value="{Binding AntennaPivot}" Increment="1" x:Name="nudAntennaPivot" Height="25" Width="144" Margin="0 100"/>
            <NumericUpDown Value="{Binding AntennaOffset}" Increment="1" x:Name="nudAntennaOffset" Height="25" Width="144" Margin="0 100"/>
          </StackPanel>
        </WrapPanel>
      </StackPanel>
    </ScrollViewer>
  </UserControl>
